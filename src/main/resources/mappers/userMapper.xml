<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.instagram.user.dao.UserDAO">
	<insert id="insertUser" parameterType="map">
		INSERT INTO `user`
		(
			`loginId`
			,`password`
			,`phoneNumber`
			,`imagePath`
			,`name`
			,`email`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{loginId}
			, #{password}
			, NULL
			, NULL
			, #{name}
			, #{email}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="existLoginId" parameterType="string" resultType="int">
		SELECT
			COUNT(1)
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	
	<select id="selectUserByLoginIdPassword" parameterType="map"
		resultType="com.instagram.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`phoneNumber`
			,`imagePath`
			,`name`
			,`email`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
			AND `password` = #{password}
	</select>
	
	<select id="selectUserById" parameterType="int" resultType="com.instagram.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`phoneNumber`
			,`imagePath`
			,`name`
			,`email`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{id}
	</select>
	<select id="selectUserList" parameterType="map"
		resultType="com.instagram.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`phoneNumber`
			,`imagePath`
			,`name`
			,`email`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
	</select>
</mapper>