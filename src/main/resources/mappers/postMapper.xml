<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.instagram.post.dao.PostDAO">
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			,#{content}
			,#{imagePath}
			,NOW()
			,NOW()
		)
	</insert>
	
	<select id="selectPostList" resultType="com.instagram.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		<if test="content != null">
		WHERE
			`content`
			LIKE
			#{content%}
		</if>
		ORDER BY `id` DESC
	</select>
	
	<select id="selectPostById" resultType="com.instagram.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{id}
	</select>
	
	<select id="selectPostByPostIdAndUserId" parameterType="map"
			resultType="com.instagram.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
			AND
			`id` = #{postId}
	</select>
	
	<update id="updatePost" parameterType="map">
		UPDATE `post`
		SET
			`content` = #{content}
			<if test="imagePath != null">
			, `imagePath` = #{imagePath}
			</if>
			, `updatedAt` = NOW()
		WHERE
			`id` = #{postId}
	</update>
	
	<delete id="deletePostByPostIdAndUserId" parameterType="map">
		DELETE
		FROM
			`post`
		WHERE
			`id` = #{postId}
			AND `userId` = #{userId}
	</delete>
</mapper>